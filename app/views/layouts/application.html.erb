<!DOCTYPE html>
<html>
  <head>
    <title>Vote4Vote</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid" id="main">
      <div class="container">
        <%= render partial: "shared/flash_messages", flash: flash %>
        <span id="twitter">
          Tell your followers about Vote4Vote!
          <br>
          <a class="twitter-share-button" data-size="large" href="<%= @twitter_url %>">
            Tweet about Vote4Vote
          </a>
        </span>
        <%= image_tag('banner.png', class: 'img-responsive center-block') %>
        <%= yield %>
      </div>
    </div>
    <!-- <footer class="footer"> -->
    <!-- </footer> -->
  </body>
</html>

